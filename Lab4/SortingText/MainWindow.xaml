<Window x:Class="SortingText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingText"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel >
        <Button DockPanel.Dock="Top" Click="SortClick">Sort</Button>
        <ScrollViewer DockPanel.Dock="Top" Height="262">
            <StackPanel x:Name="content"></StackPanel>
        </ScrollViewer>
        <Button DockPanel.Dock="Top" Click="CountWordsClick">Count unique words</Button>
        <TextBlock DockPanel.Dock="Top" x:Name="countWords"></TextBlock>
        <ScrollViewer DockPanel.Dock="Bottom">
            <StackPanel  x:Name="uniqueWords"></StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
